---
// src/pages/forgot-password.astro
import Header from '../components/Header.astro';
import '../styles/global.css'; // Asegúrate de que esto esté presente
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recuperar Contraseña</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
</head>
<body class="font-poppins bg-gradient-to-br from-blue-600 to-teal-500 min-h-screen flex flex-col pt-[72px]">
    <Header />

    <main class="flex-grow flex items-center justify-center p-4 sm:p-6 lg:p-8">
        <div class="max-w-md w-full space-y-8 p-10 bg-white dark:bg-gray-800 rounded-2xl shadow-3xl z-10 border border-gray-100 dark:border-gray-700 transform transition-all duration-300 hover:scale-[1.02] hover:shadow-4xl">
            <div class="text-center">
                <h2 class="mt-2 text-4xl font-extrabold text-gray-900 dark:text-white leading-tight">
                    ¿Olvidaste tu Contraseña?
                </h2>
                <p class="mt-2 text-md text-gray-600 dark:text-gray-400">
                    Introduce tu correo electrónico para restablecerla.
                </p>
            </div>

            <form id="forgotPasswordForm" class="mt-8 space-y-6" action="#" method="POST">
                <div>
                    <label for="email-address" class="sr-only">Correo Electrónico</label>
                    <input
                        id="email-address"
                        name="email"
                        type="email"
                        autocomplete="email"
                        required
                        class="appearance-none rounded-lg relative block w-full px-4 py-3 border border-gray-300 dark:border-gray-700 placeholder-gray-500 dark:placeholder-gray-400 text-gray-900 dark:text-white focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm bg-gray-50 dark:bg-gray-700 transition duration-200 ease-in-out"
                        placeholder="Correo Electrónico"
                    />
                </div>
                <div>
                    <button
                        type="submit"
                        class="group relative w-full flex justify-center py-3 px-4 border border-transparent text-lg font-semibold rounded-md text-white bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-200 ease-in-out transform hover:scale-105 shadow-lg hover:shadow-xl"
                    >
                        Restablecer Contraseña
                    </button>
                </div>
            </form>

            <p class="mt-8 text-center text-sm text-gray-600 dark:text-gray-400">
                <a href="/login" class="font-medium text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300 transition duration-200 ease-in-out">
                    Volver al inicio de sesión
                </a>
            </p>

            <div id="feedbackMessage" class="mt-4 text-center text-sm font-medium"></div>
        </div>
    </main>
    <footer class="text-center p-4 text-gray-200 text-sm">
        &copy; {new Date().getFullYear()} Contabilito. Todos los derechos reservados.
    </footer>

    <script is:inline>
        const forgotPasswordForm = document.getElementById('forgotPasswordForm');
        const feedbackMessage = document.getElementById('feedbackMessage');

        forgotPasswordForm.addEventListener('submit', async (event) => {
            event.preventDefault();
            const email = document.getElementById('email-address').value;

            try {
                const response = await fetch('/api/auth/forgot-password', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email })
                });

                const data = await response.json();

                if (response.ok) {
                    feedbackMessage.textContent = data.message;
                    feedbackMessage.className = 'mt-4 text-center text-sm font-medium text-green-600';
                } else {
                    feedbackMessage.textContent = data.message || 'Error al solicitar restablecimiento.';
                    feedbackMessage.className = 'mt-4 text-center text-sm font-medium text-red-600';
                }
            } catch (error) {
                console.error('Error al enviar solicitud de restablecimiento:', error);
                feedbackMessage.textContent = 'No se pudo conectar al servidor.';
                feedbackMessage.className = 'mt-4 text-center text-sm font-medium text-red-600';
            }
        });
    </script>
</body>
</html>
