---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import HeaderLanding from '../components/Header-index.astro';
import Footer from '../components/Footer-index.astro';
import { initializeDatabase } from '../db/db.js';

// Asegúrate de que las tablas existan antes de cualquier operación.
await initializeDatabase().catch(err => console.error("Error al inicializar DB desde index.astro:", err));

const features = [
    {
        title: "Control Total de Ingresos y Gastos",
        description: "Registra y categoriza cada transacción para saber exactamente dónde va tu dinero.",
        iconSvg: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-8 h-8"><path d="M14 2H6a2 2 0 0 0-2 2v16c0 1.1.9 2 2 2h12a2 2 0 0 0 2-2V8l-6-6z"/><path d="M14 3v5h5M18 13H6M14 17H6"/></svg>`
    },
    {
        title: "Informes y Gráficos Visuales",
        description: "Obtén una visión clara de tu salud financiera con reportes detallados y gráficos intuitivos.",
        iconSvg: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-8 h-8"><path d="M12 20V10M18 20V4M6 20v-4"/></svg>`
    },
    {
        title: "Seguridad de Datos de Nivel Profesional",
        description: "Tus datos financieros están protegidos con encriptación avanzada, dándote total tranquilidad.",
        iconSvg: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-8 h-8"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/></svg>`
    },
    {
        title: "Multiplataforma y Sincronizado",
        description: "Accede a tus finanzas desde cualquier dispositivo, tus datos siempre están actualizados y sincronizados.",
        iconSvg: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-8 h-8"><path d="M17 18a2 2 0 0 0-2-2H9a2 2 0 0 0-2 2"/><rect x="7" y="10" width="10" height="8" rx="3"/><path d="M12 2v4"/><path d="M12 10V8"/></svg>`
    }
];

const testimonials = [
    {
        name: "Ana G.",
        quote: "Contabilito me ayudó a organizar mis finanzas personales en solo unas semanas. ¡Ya no tengo estrés por mis gastos!",
        rating: 5,
    },
    {
        name: "Carlos M.",
        quote: "Como dueño de un pequeño negocio, necesitaba una herramienta simple pero poderosa. Contabilito fue la solución perfecta para llevar el control de mis activos.",
        rating: 5,
    },
    {
        name: "Sofía T.",
        quote: "La interfaz es increíblemente fácil de usar. Pude empezar a registrar mis transacciones sin leer un solo manual. ¡Recomendado 100%!",
        rating: 4,
    }
];
---

<Layout title="Contabilito - Tu Asistente Financiero Personal">
    <div class="flex flex-col min-h-screen bg-white dark:bg-gray-900 transition-colors duration-300">
        <HeaderLanding />

        <main class="flex-grow">
            <!-- Sección Principal o "Hero" -->
            <section class="py-16 px-10 md:py-24 bg-gradient-to-b from-blue-100 to-white dark:from-gray-800 dark:to-gray-900">
                <div class="container mx-auto px-4 flex flex-col md:flex-row items-center justify-between gap-12">
                    <div class="md:w-1/2 space-y-6 text-center md:text-left">
                        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-extrabold text-gray-900 dark:text-white leading-tight">
                            Organiza tus finanzas con <span class="text-blue-700 dark:text-blue-500">Contabilito</span>
                        </h1>
                        <p class="text-lg text-gray-700 dark:text-gray-300 mt-4">
                            Lleva un control impecable de tus ingresos y gastos. Regístrate hoy mismo y toma el control de tu dinero.
                        </p>
                        <div class="mt-8 flex flex-col sm:flex-row justify-center md:justify-start gap-4">
                            <a href="/register" class="inline-flex items-center justify-center px-8 py-4 border border-transparent text-xl font-bold rounded-lg shadow-lg text-white bg-blue-700 hover:bg-blue-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-transform duration-300 transform hover:scale-105">
                                Regístrate Gratis
                                <svg class="ml-2 w-6 h-6" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"><path d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6zM16 7a1 1 0 10-2 0v1h-1a1 1 0 100 2h1v1a1 1 0 102 0v-1h1a1 1 0 100-2h-1V7z" /></svg>
                            </a>
                            <a href="/login" class="inline-flex items-center justify-center px-8 py-4 border border-blue-600 dark:border-blue-500 text-xl font-bold rounded-lg shadow-lg text-blue-600 dark:text-blue-500 hover:bg-blue-50 dark:hover:bg-gray-700 transition-transform duration-300 transform hover:scale-105">
                                Ya tengo cuenta
                                <svg class="ml-2 w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path></svg>
                            </a>
                        </div>
                    </div>
                    <div class="md:w-1/2 flex justify-center p-6">
                        <img src="/icono.png" alt="Imagen de Contabilito" class="w-full max-w-sm rounded-3xl drop-shadow-2xl transition-transform duration-500 transform" />
                    </div>
                </div>
            </section>

            <!-- Sección de Características -->
            <section class="py-16 bg-gray-50 dark:bg-gray-800">
                <div class="container mx-auto px-4 text-center">
                    <h2 class="text-3xl font-extrabold text-gray-900 dark:text-white">
                        Funcionalidades Clave
                    </h2>
                    <p class="mt-4 text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
                        Todo lo que necesitas para gestionar tus finanzas personales y de tu negocio de forma simple y eficiente.
                    </p>
                    <div class="mt-12 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                        {features.map((feature) => (
                            <div class="p-6 bg-white dark:bg-gray-900 rounded-xl shadow-lg transition-transform duration-300 hover:scale-105 hover:shadow-xl border border-gray-200 dark:border-gray-700">
                                <div class="flex justify-center items-center h-16 w-16 mx-auto mb-4 bg-blue-100 dark:bg-blue-900 text-blue-700 dark:text-blue-300 rounded-full">
                                    <Fragment set:html={feature.iconSvg} />
                                </div>
                                <h3 class="text-xl font-bold text-gray-900 dark:text-white">
                                    {feature.title}
                                </h3>
                                <p class="mt-2 text-gray-600 dark:text-gray-400">
                                    {feature.description}
                                </p>
                            </div>
                        ))}
                    </div>
                </div>
            </section>

            <!-- Sección de Testimonios -->
            <section class="py-16">
                <div class="container mx-auto px-4 text-center">
                    <h2 class="text-3xl font-extrabold text-gray-900 dark:text-white">
                        Lo que dicen nuestros usuarios
                    </h2>
                    <div class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-8">
                        {testimonials.map((testimonial) => (
                            <div class="p-8 bg-gray-100 dark:bg-gray-800 rounded-xl shadow-lg border border-gray-200 dark:border-gray-700 transition-all duration-300 hover:scale-105">
                                <div class="flex justify-center mb-4 text-yellow-400">
                                    {[...Array(testimonial.rating)].map((_, i) => (
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5 fill-current" aria-hidden="true"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" /></svg>
                                    ))}
                                </div>
                                <p class="italic text-gray-700 dark:text-gray-300">"{testimonial.quote}"</p>
                                <p class="mt-4 font-semibold text-gray-900 dark:text-white">- {testimonial.name}</p>
                            </div>
                        ))}
                    </div>
                </div>
            </section>

            <!-- Sección de Llamada a la Acción (CTA) Final -->
            <section class="py-16 bg-blue-700 dark:bg-blue-800 text-white text-center">
                <div class="container mx-auto px-4">
                    <h2 class="text-4xl font-extrabold leading-tight">
                        ¿Listo para tomar el control de tus finanzas?
                    </h2>
                    <p class="mt-4 text-xl opacity-90">
                        Únete a miles de personas que ya están organizando su dinero con Contabilito.
                    </p>
                    <a href="/register" class="mt-8 inline-flex items-center justify-center px-10 py-4 border border-transparent text-xl font-bold rounded-lg shadow-lg text-blue-700 bg-white hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-white transition-transform duration-300 transform hover:scale-105">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-6 h-6 mr-2"><path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" /></svg>
                        Comienza Ahora
                    </a>
                </div>
            </section>
        </main>

        <Footer />
    </div>
</Layout>
